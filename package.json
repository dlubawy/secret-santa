{
  "name": "secret-santa",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "npm run build:dev && (npm run build:watch & npm run serve:firebase)",
    "serve:firebase": "firebase emulators:start --import=.firebase/fixtures",
    "build": "vue-cli-service build",
    "build:dev": "vue-cli-service build --mode development",
    "build:watch": "vue-cli-service build --mode development --watch --no-clean",
    "lint": "vue-cli-service lint",
    "deploy": "npm run build && npm run deploy:firebase",
    "deploy:firebase": "firebase deploy"
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "bootswatch": "^5.1.3",
    "core-js": "^3.6.5",
    "firebase": "^9.6.0",
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
